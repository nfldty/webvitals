generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
  output        = "../node_modules/.prisma/client"
}


datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id         String   @id @default(uuid()) // Use UUID to prevent IDOR
  username   String   @unique
  password   String
  createdAt  DateTime @default(now()) @map("created_at")
  sessions       Session[]
  pageVisits     PageVisit[]
  mouseMovements MouseMovement[]
  timeSpent      TimeSpent[]
  @@map("users")
}

model Session {
  id        String   @id
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @map("user_id")
  startTime DateTime @default(now()) @map("start_time")
  endTime   DateTime? @map("end_time")

  pageVisits     PageVisit[]
  mouseMovements MouseMovement[]
  timeSpent      TimeSpent[]
  @@map("sessions")
}

model PageVisit {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @map("user_id")
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId String   @map("session_id")
  pageUrl   String   @map("page_url")
  visitedAt DateTime @default(now()) @map("visited_at")
  leftAt    DateTime? @map("left_at")
  @@map("page_visits")
}

model MouseMovement {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @map("user_id")
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId String   @map("session_id")
  xCoord    Int      @map("x_coord")
  yCoord    Int      @map("y_coord")
  createdAt DateTime @default(now()) @map("created_at")
  @@map("mouse_movement")
}

model TimeSpent {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @map("user_id")
  session      Session  @relation(fields: [sessionId], references: [id])
  sessionId    String   @map("session_id")
  elapsedTime  Int      @default(0) @map("elapsed_time")
  lastModified DateTime @default(now()) @map("last_modified")
  @@map("time_spent")
}
